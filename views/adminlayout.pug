doctype html
html
  head
    title= `${title} | ${h.siteName}`
    link(rel='stylesheet', href='/dist/style.css')
    link(rel="shortcut icon" type="image/png" href="/images/icons/favicon.jpg")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    meta(charset="utf-8")

  body
    block header
      header.top
        nav.nav
          .nav__section.nav__section--pages
            li.nav__item
              a.nav__link.nav__link--logo(href="/ataraxia") АДМИНИСТРАЦИЯ
            each item in h.adminMenu
              li.nav__item
                a.nav__link(href=item.slug, class=(currentPath === item.slug ? 'nav__link--active' : ''))
                  != h.icon(item.icon)
                  span #{item.title}
            if user && user.level === 10
              li.nav__item
                a.nav__link(href="/ataraxia/addvideo", class=(currentPath === '/ataraxia/addvideo' ? 'nav__link--active' : ''))
                  != h.icon('add')
                  span Добави видео
              li.nav__item
                a.nav__link(href="/ataraxia/addpodcast", class=(currentPath === '/ataraxia/addpodcast' ? 'nav__link--active' : ''))
                  != h.icon('add')
                  span Добави подкаст
          //- .nav__section.nav__section--search
          //-   .search
          //-     input.search__input(type="text" placeholder="Търсене..." name="search")
              .search__results
          .nav__section.nav__section--user
            if user
              li.nav__item: a.nav__link(href="/logout", class=(currentPath.startsWith('/logout') ? 'nav__link--active' : ''))
                != h.icon('logout')
                span Изход
              li.nav__item: a.nav__link(href="/account", class=(currentPath.startsWith('/account') ? 'nav__link--active' : ''))
                img.avatar(src=user.gravatar + 'd=retro')
            if user
              li.nav__item: a.nav__link(href="/")
                != h.icon('store')
                span Сайт
            //- - const adminIp = '::ffff:80.72.66.242'
            //- - console.log(ip)


    block messages
      if locals.flashes
        .inner.inner--flashes
          .flash-messages
            - const categories = Object.keys(locals.flashes)
            each category in categories
              each message in flashes[category]
                .flash(class=`flash--${category}`)
                  p.flash__text!= message
                  button.flash__remove(onClick="this.parentElement.remove()") &times;
    .content
      block content
        p This is the default!
      block footer
        footer.footer
          .inner
            - const year = new Date().getFullYear()
            - const copyright = `${year} DevZone.BG, Всички права запазени.`
            p &copy; #{copyright}
    block scripts
      //script(src=`https://maps.googleapis.com/maps/api/js?key=${process.env.MAP_KEY}&libraries=places`)
      script(src="/dist/App.bundle.js")
